<html>
  <head>
  </head>
  <body>
    <div class="container">
      <p id="notice"><%= notice %></p>

      <h1>Departments</h1>
      
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Store</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Code</th>
            <th scope="col">Store</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.store.name %></td>
              <td><%= department.name %></td>
              <td><%= department.description %></td>
              <td><%= department.code %></td>
              <td><%= link_to department.store.name, store_path(department.store) if department.store %></td>
              <td><%= link_to 'Show', department %></td>
              <td><%= link_to 'Edit', edit_department_path(department) %></td>
              <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Department', new_department_path %>
    </div>
    
    
  </body>
</html>

