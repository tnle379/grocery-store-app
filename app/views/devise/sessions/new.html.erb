<html class="form-signin-body">
  <head>
    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
  </head>
  <body class="form-signin-body text-center">
    <div class="row justify-content-sm-center">
      <div class="col-sm-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
          <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
          <div class=field>
            <%= f.label :email, class: "sr-only" %>Email address<br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
          </div>
          <div class=field>
            <%= f.label :password, class: "sr-only" %>Password<br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field checkbox mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
      
    
  </body>
</html>
